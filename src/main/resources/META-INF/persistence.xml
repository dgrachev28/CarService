<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="mysql">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>carservice.domain.Master</class>
        <class>carservice.domain.Workshop</class>
        <class>carservice.domain.Service</class>
        <class>carservice.domain.IncomeTicket</class>
        <class>carservice.domain.Client</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.password" value="ltybC555"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://127.0.0.1:3306/carservice"/>
            <property name="hibernate.connection.username" value="carservice"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.hbm2ddl.import_files" value="/init.sql"/>

        </properties>
    </persistence-unit>
</persistence>



